mixin breadcrumb(list)
    nav#breadcrumbs.breadcrumbs
        .container.page-wrapper
            each item, index in list
                if item.link
                    a(href=item.link) #{item.title}
                else if index < list.length - 1
                    span / #{item.title}
                else
                    span.breadcrumb_last(aria-current='page') / #{item.title}
