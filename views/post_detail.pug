extends layout/master
include mixin/breadcrumb
include mixin/index
include mixin/helper

block content
    +breadcrumb([
        {title: 'Home', link: '/'},
        {title: 'Blog'},
        {title: title},
    ])
    .py-5.w3l-homeblock1.text-center
        .container.mt-md-3
            h3.blog-desc-big.text-center.mb-4
                | #{title}
            .blog-post-align
                .blog-post-img
                    a(href='author.html')
                        img.rounded-circle.img-fluid(src=author.avatar alt='')
                .blog-post-info
                    .author.align-items-center.mb-1
                        a(href='author.html') #{author.name}
                        |  in 
                        a(href='#url') #{categories[0].title}
                    ul.blog-meta
                        li.meta-item.blog-lesson
                            span.meta-value= convertTimeToDate(published_at)

                        li.meta-item.blog-students
                            span.meta-value  #{time_read}min read

    section.blog-post-main.w3l-homeblock1
        // /blog-post
        .blog-content-inf.pb-5
            .container.pb-lg-4
                .single-post-image
                    .post-content
                        iframe.mb-5(src='https://www.youtube.com/embed/ZlbHdYMWSOA' frameborder='0' allowfullscreen='')
                .single-post-content #{content}
                    .d-grid.left-right.mt-5.pb-md-5
                        .buttons-singles.tags
                            h4 Tags :
                            .single-post-tag(style="margin-top: 20px;")
                                each item in tags
                                    a(href='#blog-tag') #{item.title}
                        .buttons-singles
                            h4 Share :
                            a(href='#blog-share')
                                span.fa.fa-facebook(aria-hidden='true')
                            a(href='#blog-share')
                                span.fa.fa-twitter(aria-hidden='true')
                            a(href='#blog-share')
                                span.fa.fa-google-plus(aria-hidden='true')
                            a(href='#blog-share')
                                span.fa.fa-pinterest-p(aria-hidden=' true')
                    // //author-card
                    .author-card.mt-5
                        .row.align-items-center
                            .col-sm-3.col-6
                                div
                                    img.rounded-circle.img-fluid(src=author.avatar alt='')
                            .col-sm-9.mt-sm-0.mt-3
                                h3.mb-3.title #{author.name}
                                p
                                    | #{author.description}
                                ul.author-icons.mt-4
                                    li
                                        a.facebook(href='#url')
                                            span.fa.fa-facebook(aria-hidden='true')
                                    li
                                        a.twitter(href='#url')
                                            span.fa.fa-twitter(aria-hidden='true')
                                    li
                                        a.google(href='#url')
                                            span.fa.fa-google-plus(aria-hidden='true')
                                    li
                                        a.linkedin(href='#url')
                                            span.fa.fa-linkedin(aria-hidden='true')
                                    li
                                        a.github(href='#url')
                                            span.fa.fa-github(aria-hidden='true')
                                    li
                                        a.dribbble(href='#url')
                                            span.fa.fa-dribbble(aria-hidden='true')
                    // //author-card
                    .comments.mt-5
                        h4.side-title Comments (2)
                        .media.mt-4
                            .img-circle
                                img.img-fluid(src='assets/images/c1.jpg' alt='...')
                            .media-body
                                ul.time-rply.mb-2
                                    li
                                        a.name.mt-0.mb-2.d-block(href='#URL') William Jack
                                        |                                         April 15th, 2020 - 10:02 pm
                                    li.reply-last
                                        a.reply(href='#reply')
                                            | Reply
                                p
                                    | Lorem ipsum dolor sit amet consectetur, adipisicing elit. Repellat, hic
                                    | reprehenderit eum cupiditate deleniti, Lorem ipsum dolor sit amet consectetur
                                    | adipisicing.....
                        .media
                            .img-circle
                                img.img-fluid(src='assets/images/c2.jpg' alt='...')
                            .media-body
                                ul.time-rply.mb-2
                                    li
                                        a.name.mt-0.mb-2.d-block(href='#URL') James Harper
                                        |                                         April 15th, 2020 - 12:30 pm
                                    li.reply-last
                                        a.reply(href='#reply')
                                            | Reply
